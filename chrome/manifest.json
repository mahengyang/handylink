{  
  "name": "handlylink",  
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "display relation url on the margin of the web page when you are browsing.",  
  "browser_action": {
    "default_icon": "icon.png" ,
    "default_title": "handlylink",
    "default_popup": "popup.html"
  },
  "permissions": [
   "tabs"
  ],
  "content_scripts": [
     {
       "matches": ["http://*/*", "https://*/*"],
       "css": ["css/default.css"],
       "js": ["js/jquery-2.0.3.min.js","js/addLayer.js"]
     }
  ]
} 